FROM node:20-alpine3.17 AS BUILD

RUN apk add --no-cache python3 make g++ 
  
WORKDIR /app

COPY package.json yarn.lock ./

RUN yarn install --frozen-lockfile 

COPY . ./

RUN yarn build 




FROM node:20-alpine3.17

WORKDIR /app

COPY --from=BUILD /app ./

RUN rm dist/conf.yml

CMD [ "yarn", "start" ]

